<main class="main-content">
	<header class="header">
		<h5 class="title-bar">Add / Edit Category <Category></Category>
		</h5>
		<div class="logout-icon">
			<ul class="d-flex">
				<li class="bell-ico"><a href="" class="fa fa-sign-out"></a></li>
			</ul>
		</div>
	</header>
	<div class="page-content">
		<form method="POST">
			<div class="row">
				<div class="col-12 col-lg-12">
					<div class="card">
						<div class="card-header">Add / Edit Category </div>
						<div class="px-3">
							<div class="form-group mt-3 mb-0">
								<label class="col-form-label form-control-label">Category Name <span
										style="color:red">*</span></label>
								<div class="form-input">
									<input class="form-control" type="text" name="category_name" id="category_name_id">
								</div>
							</div>
						</div>
						<div class="px-3">
							<div class="form-group mt-3 mb-0">
								<label class="col-form-label form-control-label">Category Description <span
										style="color:red">*</span></label>
								<div class="form-input">
									<textarea id="category_description_id" class="pro_interest_area form-control"
										name="category_description"></textarea>
								</div>
							</div>
						</div>
						<div class="px-3">
							<div class="form-group mt-3">
								<label class="col-form-label form-control-label">Select Category Status <span
										style="color:red">*</span></label>
								<div class="form-input">
									<select class="form-control" name="category_status" id="category_status_id">
										<option value="Active">Active</option>
										<option value="InActive">InActive</option>
									</select>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="form-group">
					<label class="col-form-label form-control-label"></label>
					<div class="form-input text-center">
						<input type="button" class="btn theme-btn mx-auto" value="Save Changes"
							onclick="validateCategoryForm()">
					</div>
				</div>
			</div>
		</form>
	</div>
</main>
