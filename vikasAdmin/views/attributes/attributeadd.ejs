<script src="/javascripts/controllers/attributes.controller.js"></script>
<div class="main-content" ng-controller="AttributeController">
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-lg-10 col-xl-8">
				<div class="header mt-md-5">
					<div class="header-body">
						<div class="row align-items-center">
							<div class="col">
								<h6 class="header-pretitle">
									New Attribute
								</h6>
								<h1 class="header-title">
									Add New Attribute
								</h1>
							</div>
						</div>
					</div>
				</div>
				<form class="mb-4" ng-submit="onSubmit()">
					<div class="row">
						<div class="col-12">
							<div class="form-group">
								<label class="form-label">
									Attribute Name <small class="fe fe-help-circle text-muted"
										title="This will be used for API reference.">
									</small> <b class="text-danger">*</b>
								</label>
								<input type="text" class="form-control" ng-model="attributename" placeholder="Enter Attribute Name"
									required>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-12 col-md-6">
							<div class="form-group">
								<label class="form-label mb-1">
									Active <small class="fe fe-help-circle text-muted"
										title="This will be used for API reference.">
									</small> <b class="text-danger">*</b>
								</label>
								<div class="form-check form-switch">
									<input class="form-check-input" id="switchOne" type="checkbox" ng-model="status">
									<label class="form-check-label" for="switchOne"></label>
								</div>
							</div>
						</div>
						<hr class="mt-5 mb-5">
						<button type="submit" class="btn w-100 btn-primary">Add Attribute</button>
						<a href="#" class="btn w-100 btn-link text-muted mt-2">
							Cancel
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
